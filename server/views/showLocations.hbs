{{> locationsNav}}

<h2>locations:</h2>
<a class="nav" href="/locations/add/{{location}}">add location</a>

<ul class="cards">
  {{#each locations}}
  <li class="card">
    <div class="location">
      <span class="title">{{name}}</span>
      <p class="data">{{description}}</p>
      <a href="/locations/{{id}}/edit">edit location</a>
    </div>
  </li>
  {{/each}}
</ul>
